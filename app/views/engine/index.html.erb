<div class="row pt-3">
  <div class="row">
    <h1>Jobs CSV Upload</h1>
  </div>

  <div class="row pt-2">
    <%= form_tag job_index_path, method: "post", action: "upload", multipart: true do %>
      <%= file_field_tag 'job' %>
      <%= submit_tag "Upload Jobs", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row pt-3">
  <div class="row">
    <h1>Job Seeker CSV Upload</h1>
  </div>

  <div class="row pt-2">
    <%= form_tag job_seekers_path, method: "post", action: "upload", multipart: true do %>
      <%= file_field_tag 'job_seeker' %>
      <%= submit_tag "Upload Job Seekers", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row py-3">
  <div class="row">
    <h1>Jobs Matches</h1>
  </div>

  <div class="row pt-2">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Job Seeker Id</th>
        <th>Job Seeker Name</th>
        <th>Job Id</th>
        <th>Job Title</th>
        <th>Matching Skill Count</th>
        <th>Matching Skill Percent</th>
      </tr>
      <% @job_match_array.each do |job_match| %>
        <tr>
          <td><%= job_match[:jobseeker_id] %></td>
          <td><%= job_match[:jobseeker_name] %></td>
          <td><%= job_match[:job_id] %></td>
          <td><%= job_match[:job_title] %></td>
          <td><%= job_match[:matching_skill_count] %></td>
          <td><%= job_match[:matching_skill_percent] %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= link_to "Jobs List", job_index_path, class: "btn btn-primary btn-lg" %>
  </div>
  <div class="col">
    <%= link_to "Job Seekers List", job_seekers_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>